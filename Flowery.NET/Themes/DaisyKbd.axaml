<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Flowery.Controls;assembly=Flowery.NET">

    <Design.PreviewWith>
        <Border Padding="20">
            <StackPanel Spacing="10">
                <controls:DaisyKbd Size="ExtraSmall" Content="XS" />
                <controls:DaisyKbd Size="Small" Content="SM" />
                <controls:DaisyKbd Size="Medium" Content="Ctrl" />
                <controls:DaisyKbd Size="Large" Content="LG" />
                <controls:DaisyKbd Size="ExtraLarge" Content="XL" />
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <ControlTheme x:Key="{x:Type controls:DaisyKbd}" TargetType="controls:DaisyKbd">
        <Setter Property="Background" Value="{DynamicResource DaisyBase200Brush}" />
        <Setter Property="Foreground" Value="{DynamicResource DaisyBaseContentBrush}" />
        <Setter Property="Padding" Value="4,0" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="BorderThickness" Value="1,1,1,2" />
        <Setter Property="BorderBrush" Value="{DynamicResource DaisyBase300Brush}" />
        <Setter Property="MinHeight" Value="24" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontFamily" Value="Monospace" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />

        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Padding="{TemplateBinding Padding}">
                    <ContentPresenter Content="{TemplateBinding Content}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                </Border>
            </ControlTemplate>
        </Setter>

        <!-- Size: ExtraSmall -->
        <Style Selector="^[Size=ExtraSmall]">
            <Setter Property="MinHeight" Value="16" />
            <Setter Property="Padding" Value="2,0" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="CornerRadius" Value="2" />
        </Style>

        <!-- Size: Small -->
        <Style Selector="^[Size=Small]">
            <Setter Property="MinHeight" Value="20" />
            <Setter Property="Padding" Value="3,0" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="CornerRadius" Value="3" />
        </Style>

        <!-- Size: Medium is the default, no override needed -->

        <!-- Size: Large -->
        <Style Selector="^[Size=Large]">
            <Setter Property="MinHeight" Value="32" />
            <Setter Property="Padding" Value="6,0" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="CornerRadius" Value="5" />
        </Style>

        <!-- Size: ExtraLarge -->
        <Style Selector="^[Size=ExtraLarge]">
            <Setter Property="MinHeight" Value="40" />
            <Setter Property="Padding" Value="8,0" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="CornerRadius" Value="6" />
        </Style>

    </ControlTheme>
</ResourceDictionary>
